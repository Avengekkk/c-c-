//倒序打印单词
//于Dev-c++上编译成功，VS上不可用，代码目前为止未发现bug

#include<stdio.h>
#include<string.h>
int main()
{
	printf("请输入一个单词，我将倒序打印它"); 
	char word[40];
	char back_word[40];
	scanf("%s",word);
	//printf("%s长%d",word,strlen(word));
	int length;
	length=strlen(word);
	int i=0;
	int j=length-1;
	for(;j>=0;i++,j--)
	{
		back_word[i]=word[j];
		
	}
	printf("%s",back_word);
//	char i[12]={'q','w','r'};
//	char w[12]={'h','l','o','t'};
//	i[1]=w[3];
//	printf("%c",i[1]);
	return 0;
	
}
