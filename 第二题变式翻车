//重复方阵打印字符
#include <stdio.h>
#include <string.h>
void print(char ,int ,int);
int main()
{
	char ch;
	int line, row;
	printf("请输入一个字符和行数和列数\n");
	
	//putchar(ch);
	ch = getchar();
	scanf_s("%d %d",&line, &row);
	while (line > 0 and row > 0)
	{
		print(ch,line,row);
		ch = getchar();
		scanf_s("%d %d",&line, &row);
	}

	return 0;
}
void print(char ch, int line, int row)
{
	for (int i = 1; i <= line; i++)
	{
		for (int j = 1; j <= row; j++)
		{
			printf("%c", ch);
			//putchar(ch);
		}
		putchar('\n');
	}
}
