//打印字符和对应的ASCII码
#include <stdio.h>

#include <math.h>
#include<ctype.h>


int main()
{
	char ch;
	int cnt = 0;
	printf("请输入一个字符串\n");
	while ((ch = getchar()) != '#')
	{
  
  //没这句话，她连【enter】也打印出来 为10；
		if (ch == '\n' or ch==' ')
			continue;
      
  //当有多个数输入用    隔开时同样也打印【 】为32；
      
		printf("%c-%d  ",ch,ch);
		cnt++;
		if (cnt % 8 == 0)
			printf("\n");
		
		
	}

	
	return 0;
}
