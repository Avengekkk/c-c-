//第七章的第一题答案
//输入字符串打印空格，换行，其他字符数
#include <stdio.h>
#include <math.h>
#include<ctype.h>
int main()
{
	printf("请输入字符串！\n");
	char ch;
	int snum = 0;
	int nnum = 1;
	int onum = 0;
	while ((ch = getchar()) != '#')
	{
		switch (ch)
		{
		case ' ':
			snum++;
			continue;
		case '\n':
			nnum++;
			continue;
		default:
			onum++;
			continue;
		}
	}

	printf("空格数是%d，行数是%d，其他字符数是%d\n", snum, nnum, onum);
  return 0;
}
